<h1>Burger! Burger!</h1>

<div class="container">
    <div class="row">
        <center>
            {{!-- Add a burger --}}
            <div id='add'>
                <h2>Add a Burger: </h2>
                <form class="create-form" action="/" method="POST">
                    <div class="form-group">
                        <label class="burger-name" for="dab">Burger Name:</label>
                        <input class="burger-name-input" type="text" id="newB" name="burger_name">
                    </div>
                    <button class="btn btn-primary" type="submit">Add Burger</button>
                </form>
            </div>
            <!-- Left side (ready to eat) -->
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="red_font">Ready to eat!</h4>
                        <div id="ready_to_eat">

                            <!-- Insert Ready Burgers Here -->
                            {{#each burgers}}
                            {{#unless devoured}}
                            <form action="burger/eat/{{id}}" method="POST">
                                <div class="input-group">
                                    <li class="form-control">{{id}}. {{burger_name}}</li>
                                    <span class="input-group-btn">
                                        <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                                    </span>
                                </div>
                            </form>
                            {{/unless}}
                            {{/each}}

                        </div>
                    </div>

                    <!-- Right side (already eaten) -->
                    <div class="col-md-6">
                        <h4 class="red_font">Already eaten!</h4>
                        <div id="already_eaten">

                            <!-- Insert Eaten Burgers Here -->
                            {{#each burgers}}
                            {{#if this.devoured}}
                            <div class="input-group">
                                <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                            </div>
                            {{/if}}
                            {{/each}}

                        </div>
                    </div>
                </div>
            </div>
        </center>
    </div>
</div>